{
  "compileOnSave": true,
  "compilerOptions": {
    "incremental": true,
    "allowJs": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "ES2015", // aka "es6"
      "ES2016", // aka "es7"
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021",
      "dom",
      "dom.iterable", // fixes from TS 2.2 that previously required the 'symbol' type
    ],
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "target": "es2015",
    "noEmit": true,
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["**/*.ts", "**/*.tsx"],
}
